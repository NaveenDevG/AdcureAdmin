<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    app:cardElevation="10dp"
    >
   <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:id="@+id/rlr"
            android:layout_marginTop="15dp"
        >

<de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/doctor_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@android:color/black"
           app:civ_border_color="#9C27B0"
          android:layout_marginLeft="5dp"
            app:civ_border_width="4dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
           ></de.hdodenhof.circleimageview.CircleImageView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/doctor_image"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor Name"

                android:id="@+id/doctor_name"
                android:textStyle=   "bold"
                android:textSize="25sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_below="@id/doctor_name"
                android:textStyle=   "bold"
                android:textSize="20sp"
                android:layout_marginTop="2dp"
                android:id="@+id/doctor_specialist"
                android:text="Specialist"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/doctor_experience"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:layout_below="@id/doctor_specialist"

                android:layout_marginTop="10dp"

                android:textSize="20sp"
                android:textColor="#B5000000"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/doctor_state"
                android:layout_height="wrap_content"
                android:text="State"
                android:layout_below="@id/doctor_experience"
                android:layout_marginTop="10dp"
                 android:textSize="20sp"
                android:textColor="#B5000000"/>
        </RelativeLayout>
    </RelativeLayout>
        <Button
        android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15sp"
        android:textStyle="normal"
            android:id="@+id/hisAppo"
        android:text="Appointments"
        android:textAllCaps="false"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:layout_below="@id/rlr" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:textStyle="normal"
            android:id="@+id/hisFeed"
            android:text="Feedbacks"
            android:textAllCaps="false"
            android:layout_margin="3dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:layout_below="@id/hisAppo" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>