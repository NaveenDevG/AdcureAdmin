<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_margin="10dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borders"
 android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:id="@+id/txtPayid"
            android:text="Payment Id : pay_sgdvyuinjoommfojfo"
             android:textSize="16sp"
            android:textColor="#B5000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items : 2"
            android:id="@+id/txtItemscount"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="#B5000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Naveen"
            android:id="@+id/txtName"
            android:layout_marginTop="5dp"
             android:textSize="16sp"
            android:textColor="#B5000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number : 919490869239"
            android:layout_marginTop="5dp"
             android:textSize="16sp"
            android:textColor="#B5000000"
            android:id="@+id/txtNum"
            /> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid : Rs 234434"

            android:layout_marginTop="5dp"
             android:textSize="16sp"
            android:id="@+id/txtPaid"
            android:textColor="#B5000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtOrderdate"
            android:text="Order Date : 26th Dec 2021"
            android:layout_weight="0.6"

            android:layout_marginTop="5dp"
             android:textSize="16sp"
            android:textColor="#B5000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Shipped Yet"

            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:id="@+id/txtshipstate"
            android:textColor="#80000000"/>
        </LinearLayout>
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAllCaps="false"
           android:background="@drawable/buttonsstyle"
          android:gravity="center"
           android:text="View"
           android:id="@+id/btnView"
           android:layout_marginEnd="5dp"
            android:textColor="#fff"
           android:layout_gravity="center"
           />
    </LinearLayout>

</androidx.cardview.widget.CardView>