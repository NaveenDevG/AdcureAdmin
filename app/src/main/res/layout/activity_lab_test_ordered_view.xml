<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.adcure.adminactivity.LabTestOrderedViewActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@color/colorPrimaryDark"

        android:theme="@style/AppTheme.PopupOverlay"
        android:id="@+id/mainOne4">`

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"

            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toBack90"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_arrow_forward_24"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booked Test"
                android:layout_marginLeft="25dp"
                android:id="@+id/help_tx"
                android:textStyle="bold"
                android:textSize="15sp"

                android:textColor="#fff" />
        </androidx.appcompat.widget.Toolbar></com.google.android.material.appbar.AppBarLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"        android:layout_below="@id/mainOne4"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/borders"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Transaction Details"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/txt_labtestname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Lab test Name: Naveen Kumar"
            android:textColor="@android:color/black"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/txt_sample_y_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Sample Picked : yes"
            android:textColor="@android:color/black"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/txt_sample_pick_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Sample pickup Date : "
            android:textColor="@android:color/black"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/umail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Given mailId: Naveen Kumar"
            android:textColor="@android:color/black"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/unum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Your Number: Naveen Kumar"
            android:textColor="@android:color/black"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/dte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Date of Payment : 26-09-2021"
            android:textColor="@android:color/black"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/tme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Payment Time: 23:00"
            android:textColor="@android:color/black"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/amnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Paid Amount:300"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/report_generation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:text="Reports Generation : under Process"
            android:textColor="@android:color/black"
            android:textSize="18sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding10"
            android:background="@color/colorPrimaryDark"
            android:onClick="updateSampleStatus"
            android:padding="@dimen/padding5"
            android:text="Update Sample Pickup Status"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/margin16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding10"
            android:background="@color/colorPrimaryDark"
            android:onClick="updateReportStatus"
            android:padding="@dimen/padding5"
            android:text="Update Report Status"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/margin16dp"
            android:textStyle="bold" />
    </LinearLayout></ScrollView>
</RelativeLayout>