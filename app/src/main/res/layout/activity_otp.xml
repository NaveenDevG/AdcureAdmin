<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="OtpActivity">
    <RelativeLayout
        android:id="@+id/design3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/path">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/app_logo"  />
    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:id="@+id/num"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:background="#C1FFFFFF"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:padding="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:hint="Enter Your Mobile Number"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_style"
            android:inputType="phone" />

    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@drawable/edt_style"
        android:textAllCaps="false"
        android:id="@+id/number_submit_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
     />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:visibility="invisible"
        android:id="@+id/otpPro"
       android:orientation="vertical"  android:layout_centerInParent="true">
        <EditText
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:hint="Enter OTP"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_style"
            android:inputType="phone" />

        <Button
            android:id="@+id/validate_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edt_style"
            android:text="Validate OTP"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textAllCaps="false" />
    </LinearLayout>
</RelativeLayout>